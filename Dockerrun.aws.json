{
 "AWSEBDockerrunVersion": 2,
 "containerDefinitions":[
        {
            "name": "client",
            "image": "tgbkrkmz/multi-client",
            "hostname": "client",
            "essential": true,
            "memory": 128
        },
        {
            "name": "server",
            "image": "tgbkrkmz/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "tgbkrkmz/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "tgbkrkmz/multi-nginx",
            "hostname": "nginx",
            "essential": false,
            "portMappings":[{
                    "hostPort": 80,
                    "container": 80
            }],
            "links":[ "client" , "server" ],
            "memory": 128
        }

    ]
}